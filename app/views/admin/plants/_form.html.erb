<%= form_for [:admin, @plant] do |form| %>
  <div class="product-form-section flex">
    <div class="flex flex-col mb-6 w-1/2 mr-2">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="flex flex-col mb-6 w-1/2 ml-2">
      <%= form.label :price do %>
        Latin Name
      <% end %>
      <%= form.text_field :latin_name %>
    </div>
  </div>
  <div class="product-form-section flex">
    <div class="flex flex-col mb-6 w-1/2 mr-2">
      <%= form.label :traditional_qualities %>
      <%= form.text_area :traditional_qualities, class: 'w-full' %>
    </div>
    <div class="flex flex-col mb-6 w-1/2 ml-2">
      <%= form.label :part_used %>
      <%= form.text_area :part_used, class: 'w-full' %>
    </div>
  </div>
  <div class="product-form-section w-full">
    <div class="flex flex-col mb-6 w-full mr-2">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'w-full' %>
    </div>
  </div>
  <div class="product-form-section w-full mb-6">
    <%= form.label :images, class: 'mb-4' %>
    <div class="flex mb-4">
      <% @plant.images.each do |image| %>
        <%= image_tag image, class: 'form-images' %>
      <% end %>
      <%= form.file_field :images, multiple: true, class: 'image-input' %>
    </div>
  </div>
  <div class="product-form-section" id="2">
    <%= form.submit "Submit" %>
  </div>
<% end %>
