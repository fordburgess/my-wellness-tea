
<div class="drawer-container" id="nav-drawer-container">
  <div class="drawer-menu p-4" id="nav-drawer-menu">
    <div class="w-full flex justify-between items-center mb-8">
      <%= link_to image_tag("profile-icon.png"), edit_user_registration_path, id: "profile-icon-mobile" %>
      <div class="relative inline-block text-left">
        <div>
          <button type="button" class="test inline-flex w-full justify-center gap-x-1.5 rounded-md bg-transparent px-3 py-2 text-sm text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300" id="lang-menu-button-mobile" aria-expanded="true" aria-haspopup="true">
            <%
              lang_hash = {
                'fr' => 'Français',
                'de' => 'Deutsch',
                'it' => 'Italiano',
                'en' => 'English'
              }
            %>
            <%= lang_hash[I18n.locale.to_s] %>
            <svg class="-mr-1 size-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
              <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <div class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md shadow-lg ring-1 ring-black/5 focus:outline-none" id="lang-menu-dropdown-mobile" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
          <div class="py-1" role="none">
            <%= link_to "Français", { :locale=> 'fr' }, class: "lang-menu-item block px-4 py-2 text-sm text-gray-700", role: "menu-item" %>
            <%= link_to "Deutsch", { :locale => 'de' }, class: "lang-menu-item block px-4 py-2 text-sm text-gray-700", role: "menu-item" %>
            <%= link_to "Italiano", { :locale => 'it' }, class: "lang-menu-item block px-4 py-2 text-sm text-gray-700", role: "menu-item" %>
            <%= link_to "English", { :locale=> 'en' }, class: "lang-menu-item block px-4 py-2 text-sm text-gray-700", role: "menu-item" %>
          </div>
        </div>
      </div>
      <%= image_tag "x-icon.png", class: "x-icon", id: "x-icon" %>
    </div>
    <ul>
      <li>
        <%= link_to "Accueil", root_path %>
      </li>
      <li>
        <%= link_to "Tisanes", teas_path %>
      </li>
      <li>
        <%= link_to "Plantes", plants_path %>
      </li>
      <li>
        <%= link_to "Contact", contact_path %>
      </li>
    </ul>
  </div>
</div>
