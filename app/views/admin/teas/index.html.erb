<div class="w-full px-24 py-8">
  <div class="flex justify-between">
    <h1 class="text-3xl font-light mb-6"><%= t('admin_dashboard') %></h1>
    <h3 class="text-2xl">Mes Produits</h3>
  </div>
  <div class="flex justify-between">
    <%= render partial: "admin/partials/admin_links" %>
    <div class="grid grid-cols-3 gap-8" style="width: 78%;">
      <% @teas.each do |tea| %>
        <%= link_to edit_admin_tea_path(tea.id) do %>
        <div class="bg-red-200">
          <p><%= tea.title %></p>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
