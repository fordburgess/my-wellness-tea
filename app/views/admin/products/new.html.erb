<script src="/javascript/new_product.js"></script>
<div class="w-full grid place-items-center pt-10">
  <h1>New product page</h1>
  <div class="w-1/2">
    <%= form_for [:admin, @product] do |form| %>
      <div id="preliminary-info">
        <div class="flex flex-col mb-6">
          <%= form.label :title %>
          <%= form.text_field :title %>
        </div>
        <div class="flex flex-col mb-6">
          <%= form.label :price_chf %>
          <%= form.number_field :price %>
        </div>
        <div class="flex flex-col mb-6">
          <%= form.label :in_stock %>
          <%= form.check_box :stock %>
        </div>
        <div class="flex flex-col mb-6">
          <%= form.label :type %>
          <%= form.select :type, options_for_select(['Tea', 'Misc.']) %>
        </div>
      </div>
      <div id="secondary-info">
        <p>Div for secondary info
        <%= form.submit "Submit" %>
      </div>
      <div class="w-full flex justify-between">
        <button id="form-back-toggle">Back</button>
        <button id="form-next-toggle">Next</button>
      </div>
    <% end %>
  </div>
</div>
