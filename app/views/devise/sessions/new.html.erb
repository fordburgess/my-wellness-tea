<div class="auth-form-container">
  <div class="auth-form-subcontainer">
    <h1><%= t('log_in') %></h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w-full' }) do |f| %>
      <div class="field mb-8">
        <%= f.label :email, class: 'auth-form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-2">
        <%= f.label t('password'), class: 'auth-form-label' %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-8 flex items-center">
          <%= f.check_box :remember_me, class: 'mr-0.5' %>
          <%= f.label :remember_me, style: 'font-weight: 200' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Confirm", class: "w-full mb-4" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
