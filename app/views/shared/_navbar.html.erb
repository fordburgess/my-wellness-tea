<script src="/javascript/drawer_functionality.js"></script>
<div class="navbar-container">
  <div class="w-full flex justify-between">
    <div class="">
      <%= image_tag "logo-main.png", class: "navbar-logo" %>
    </div>
    <div class="desktop-links w-1/2 justify-around items-center">
      <%= link_to "Accueil", root_path %>
      <%= link_to "Tisanes", teas_path %>
      <%= link_to "Plantes", plants_path %>
      <%= link_to "Contact", contact_path %>
    </div>
    <div class="desktop-helpers w-1/5 flex justify-between justify-around items-center">
      <select id="language-select">
        <option>Fran√ßais</option>
        <option>Deutsch</option>
        <option>Italiano</option>
      </select>
      <div class="helper-image", id="cart-icon">
        <% if @current_cart.line_items.length > 0 %>
          <div class="cart-quantity" id="cart-quantity">
            <%= @current_cart.line_items.length %>
          </div>
        <% end %>
        <%= image_tag "cart-icon.png" %>
      </div>
      <%= link_to new_user_session_path, class: "helper-image", id: "profile-icon" do %>
        <%= image_tag "profile-icon.png" %>
      <% end %>
      <%= image_tag "hamburger-menu.png", class: "helper-image", id: "hamburger-menu" %>
      <%= render partial: "/shared/nav_drawer" %>
      <%= render partial: "/shared/cart_drawer" %>
    </div>
  </div>
</div>
