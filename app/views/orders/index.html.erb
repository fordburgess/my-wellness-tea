<div class="user-dashboard-container">
  <div class="w-full px-2.5 md:w-1/2">
    <div class="mb-4">
      <h1><%= t('my_account') %></h1>
      <h3 class="text-lg font-medium"><%= current_user.email %></h3>
    </div>
    <div class="w-full flex mb-4">
      <%= link_to t('account_details'), edit_user_registration_path, class: "w-1/2 text-center text-lg py-2" %>
      <div class="w-1/2 text-center py-2" style="border-bottom: solid 1px #54aab8"><p class="text-lg"><%= t('my_orders') %></p></div>
    </div>
    <div class="" id="edit-user">
      <div class="flex">
        <p class="w-1/4 font-semibold text-left">Order ID</p>
        <p class="w-1/4 font-semibold text-center">Date</p>
        <p class="w-1/4 font-semibold text-center">Status</p>
        <p class="w-1/4 font-semibold text-right">Total</p>
      </div>
      <% @orders.each do |order| %>
        <%= link_to order_path(order.id), class: 'w-full' do %>
          <div class="py-4 flex items-center" style="border-bottom: solid 1px #eee;">
            <p class="w-1/4 text-left font-semibold" style="color: #54aab8">#<%= order.id %></p>
            <p class="w-1/4 text-center"><%= order.created_at.day %> <%= order.created_at.strftime("%b") %>, <%= order.created_at.year %></p>
            <div class="w-1/4"><div class="status-div w-3/4">Delivered</div></div>
            <p class="w-1/4 text-right"><%= sprintf('%.2f', order.order_total > 50 ? order.order_total : order.order_total + 6.50) %> CHF</p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
