<div class="contact-container">
  <div class="contact-info flex flex-col items-center mb-8 md:mb-0">
    <h1>Nous contacter</h1>
    <%= image_tag "logo-main.png" %>
    <h6>Laboratoire J. Reboh et Fils SA</h6>
    <p class="mb-8">Route du Pontet 19 CH -1744 Chénens</p>
    <p>Téléphone: <strong style="color: #54aab8">+41 21 661 26 76</strong></p>
    <p>E-mail: <strong style="color: #54aab8">info@wellnesstea.ch</strong></p>
  </div>
  <div class="contact-form">
    <%= form_with url: contact_path, method: :post, local: true do |form| %>
      <div class="w-full mb-4">
        <%= form.label "Nom et prenom", class: 'auth-form-label' %><br />
        <%= form.text_field :name, class: 'w-full' %>
      </div>
      <div class="w-full mb-4">
        <%= form.label :email, class: 'auth-form-label' %><br />
        <%= form.email_field :email, class: 'w-full' %>
      </div>
      <div class="w-full mb-8">
        <%= form.label :message, class: 'auth-form-label' %><br />
        <%= form.text_area :message, class: 'w-full' %>
      </div>
      <div class="actions">
        <%= form.submit "Confirm", class: "w-full mb-4" %>
      </div>
    <% end %>
  </div>
</div>
