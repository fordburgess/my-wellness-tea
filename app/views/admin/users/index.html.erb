<div class="w-full px-24 py-8">
  <div class="flex items-center">
    <h1 class="text-3xl font-light mb-6 mr-2 flex items-center"><span class="mr-2"><%= t('admin_dashboard') %> /</span> <strong class="text-xl font-light">Users (<%= @users.length %>)</strong></h1>
  </div>
  <div class="flex justify-between">
    <%= render partial: "admin/partials/admin_links" %>
    <div class="w-[78%]">
      <div class="flex items-center" style="border: none;">
        <div class="w-1/3">
          <p class="font-semibold">Customer ID</p>
        </div>
        <div class="w-1/3">
          <p class="font-semibold">Email</p>
        </div>
        <div class="w-1/3">
          <p class="font-semibold">Date Joined</p>
        </div>
      </div>
      <% @users.each do |user| %>
        <div class="order-item flex items-center" id="user-item">
          <div class="w-1/3">
            <p style="color: #54aab8; font-weight: 600;">#<%= user.id %></p>
          </div>
          <div class="w-1/3">
            <p><%= user.email %></p>
          </div>
          <div class="w-1/3">
            <p><%= user.created_at.day %> <%= user.created_at.strftime("%b") %> <%= user.created_at.year %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
